<h1 class="cart-text text-right"><%= render 'layouts/cart_text' %></h1>

<h3 class="text-center">Products for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
	    <% @products.each do |product| %>
	    	<% unless product.stock.zero? %>
	      	<%= render "product_row", product: product, purchase_product: @purchase_product %>	    		
	    	<% end %>
	    <% end %>
  </div>
  <div class="text-right">
 		<%= link_to "Checkout", cart_path, class: "btn btn-primary" %>
  </div>
</div>